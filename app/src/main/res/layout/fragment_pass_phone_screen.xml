<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassPhoneScreen"
    android:background="@drawable/purple_gradient_background">

    <TextView
        android:id="@+id/triviaGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:text="@string/app_name"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/customTextColor"/>

    <TextView
        android:id="@+id/passPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/nextPlayerInstructions"
        android:layout_gravity="top|center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="280dp"
        style="@style/customTextColor"/>

    <Button
        android:id="@+id/nextPlayerReadyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextPlayerButton"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="650dp"
        android:textSize="25sp"
        style="@style/customTextColor"
        android:backgroundTint="@color/startGameColor"/>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homeButton"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />

</FrameLayout>